    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ zoozaznam.id }}</td>
            </tr>
            <tr>
              <th>{% trans %}nazov.lokality{% endtrans %}</th>
                <td>{{ zoozaznam.zoologyLocality }}</td>
