             <tr>
              <th>{% trans %}charakteristika{% endtrans %}</th>
              <td>{{ zoozaznam.lkpzoocharId }}</td>
            </tr>
             <tr>
              <th>{% trans %}zoospecies.description{% endtrans %}</th>
              <td>{{ zoozaznam.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('zoology_index') }}">back to list</a>

