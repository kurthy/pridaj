                <td>{{ zoozaznam.zoologyDescription }}</td>
            </tr>
             <tr>
              <th>{% trans %}Lkpzoospecies id{% endtrans %}</th>
              <td>{{ zoozaznam.getLkpzoospeciesId.lkpzoospeciesLat }}</td>
            </tr>
             <tr>
              <th>{% trans %}zoology.acces{% endtrans %}</th>
              <td>{{ zoozaznam.zoologyAccessibility }}</td>
            </tr>
             <tr>
