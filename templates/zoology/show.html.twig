             <tr>
              <th>{% trans %}zoology.date{% endtrans %}</th>
                <td>{{ zoozaznam.zoologyDate|date('d.m.Y') }}</td>
            </tr>
             <tr>
              <th>{% trans %}zoology.longitud{% endtrans %}</th>
                <td>{{ zoozaznam.zoologyLongitud }}</td>
